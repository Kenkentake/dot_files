set fenc=utf-8
set nobackup
set autoread
set hidden
set showcmd

set number
set virtualedit=onemore
set showmatch
set laststatus=2
set wildmode=list:longest
nnoremap j gj
nnoremap k gk
syntax enable



set autoindent
set expandtab
set ignorecase
set incsearch
set smartindent
set smarttab
set shiftwidth=4
set tabstop=4
set wrapscan
set hlsearch
nmap <Esc><Esc> :nohlsearch<CR><Esc>
